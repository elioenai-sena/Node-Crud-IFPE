<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">       
    <title>Lista de Alunos</title>
  </head>
  <body>

    <div class="container">
      <h1>Aluno</h1>
      <a href="/form" class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">add</i></a>
            <table>
        <thead>
          <th>Id</th>
          <th>Nome</th>
          <th>Curso</th>
          <th>Opções</th>
        </thead>
        <for|aluno, index| of=data.results>
          <tr>
            <td>${aluno.id}</td>
            <td>${aluno.nome}</td>
            <td>${aluno.curso}</td>
            <td>
              <a href="/form/${aluno.id}" class="btn-floating btn-small waves-effect waves-light red"><i class="material-icons">edit</i></a>
              |
              <a href="/alunos/delete/${aluno.id}" class="btn-floating btn-small waves-effect waves-light red"><i class="material-icons">delete</i></a>
            </td>
          </tr>
        </for>
      </table>
    </div>

    <for|message, index| of=data.error_messages>
      <script> 
        M.toast({
          html: '${message}',
          classes: 'red accent-4'
        })
      </script>
    </for>

    <for|message, index| of=data.success_nessages>
      <script> 
        M.toast({
          html: '${message}',
          classes: 'green darken-3'
        })
      </script>
    </for>

    
    
  </body>
</html>
